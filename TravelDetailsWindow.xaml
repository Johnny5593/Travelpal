<Window x:Class="travelpal.TravelDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Travel Details" Height="450" Width="600">
    <Grid>
        <Label Content="Travel Details" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"/>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Display travel details here (city, country, travelers, etc.) -->
            <TextBox x:Name="CityTextBox" Width="200" Margin="0,10"/>
            <TextBox x:Name="CountryTextBox" Width="200" Margin="0,10"/>
            <TextBox x:Name="TravelersTextBox" Width="200" Margin="0,10"/>
            <Button Content="Edit" Width="80" Height="30" Margin="0,10" Click="EditButton_Click"/>
            <Button Content="Save" Width="80" Height="30" Margin="0,10" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
