<Window x:Class="TravelPal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="TravelPal" FontSize="24" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0"/>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="287,0,0,0">
            <TextBox x:Name="UsernameTextBox" Text="Användarnamn" Width="200" Margin="0,10" GotFocus="UsernameTextBox_GotFocus" LostFocus="UsernameTextBox_LostFocus"/>
            <PasswordBox x:Name="PasswordBox" Width="200" Margin="0,10"/>
            <Button Content="Sign In" Width="80" Height="30" Margin="0,10" Click="SignInButton_Click"/>
            <Button Content="Register" Width="80" Height="30" Margin="0,10" Click="RegisterButton_Click"/>
        </StackPanel>
        <TextBlock x:Name="ErrorMessage" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20"/>
    </Grid>
</Window>
